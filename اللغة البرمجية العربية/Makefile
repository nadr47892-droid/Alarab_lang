# =========================
# اسم البرنامج
# =========================
TARGET = اللغة

# =========================
# المترجم
# =========================
CC = gcc

# =========================
# مسارات الرؤوس (Headers)
# =========================
INCLUDES = \
-Iالتنفيذ \
-Iالمحرك \
-Iفهم_اللغة \
-Iنظامي \
-Iالقاموس \
-Iالمحرك_الرياضي \
-Iالمحرك_الرياضي/المتغيرات \
-Iمحرك_الدوال

# =========================
# ملفات المصدر
# =========================
SOURCES = \
المشغل_الرئيسي.c \
التنفيذ/المنفذ.c \
المحرك/المحرك.c \
فهم_اللغة/مفسر_العمليات.c \
نظامي/محرك_الاشارات.c \
المحرك_الرياضي/المحرك_الرياضي.c \
المحرك_الرياضي/المتغيرات/محرك_المتغيرات.c \
محرك_الدوال/محرك_الدالة.c

# =========================
# الهدف الافتراضي
# =========================
all:
	$(CC) $(SOURCES) $(INCLUDES) -lm -o $(TARGET)

# =========================
# تشغيل البرنامج
# =========================
run: all
	./$(TARGET)

# =========================
# تنظيف
# =========================
نظف:
	rm -f $(TARGET)

